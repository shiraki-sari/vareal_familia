<div class='container'>
  <%= form_with model: @post, url: gourmet_post_path, local: true, class: 'form' do |form| %>
    <div class='form-items'>
      <div class='form-item mb-3'>
        <%= form.label :title, 'タイトル', class: 'd-block' %>
        <%= form.text_field :title, class: 'w-100 rounded' %>
      </div>
      <div class='form-item mb-3'>
        <%= form.label :content, '説明', class: 'd-block' %>
        <%= form.text_area :content, class: 'w-100 rounded' %>
      </div>
      <div class="d-flex justify-content-end">
        <ul class="d-flex flex-row list-unstyled">
          <li>
            <%= form.submit '更新', class: 'btn btn-primary' %>
          </li>
          <li>
            <%= link_to 'キャンセル', :back, class: 'btn btn-outline-dark' %>
          </li>
        </ul>
      </div>
      <div class='mb-3'>
        <label class='border p-2 rounded', style='cursor: pointer;'>
          <%= image_tag 'parts/camera.svg' %>
          <span class="ml-5">画像を選択する</span>
          <%= form.file_field :pictures, multiple: true, onchange: 'previewImage(event)', style: "display:none;" %>
        </label>
      </div>
      <div class='form-item__picture mb-3 border border-primary'>
        <div id='preview'>
          <% if form.object.pictures.attached? %>
            <% form.object.pictures.each do |image_url| %>
              <%= image_tag image_url, class: 'rounded-3 border', id: 'preview', style: 'width: 100%; height: 100%; object-fit: contain;' %>
            <% end %>
          <% else %>
            <%= image_tag '/no_image.jpeg', id: 'preview' %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
