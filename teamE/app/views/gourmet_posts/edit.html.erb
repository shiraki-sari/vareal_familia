<div class='container'>
  <%= form_with model: @post, url: gourmet_post_path, local: true, class: 'form' do |form| %>
    <div class='form-items'>
      <div class='form-item'>
        <%= form.label :title, 'タイトル', class: 'form-label' %>
        <%= form.text_field :title, class: 'form-text-input' %>
      </div>
      <div class='form-item'>
        <%= form.label :content, 'キャプション', class: 'form-label' %>
        <%= form.text_field :content, class: 'form-text-input' %>
      </div>
        <div class='mb-3'>
          <label class='border p-2 rounded', style='cursor: pointer;'>
            <%= image_tag 'parts/camera.svg' %>
            <span class="ml-5">画像を選択する</span>
            <%= form.file_field :picture, onchange: 'previewImage(event)', style: "display:none;" %>
          </label>
      </div>
      <div class='form-item'>
        <%= form.file_field :picture, class: 'form-picture-input', onchange: 'previewImage(event)', style: "display:none;" %>
        <% if form.object.picture.attached? %>
          <%= image_tag form.object.picture, id: 'preview'%>
        <% else %>
          <%= image_tag '/no_image.jpeg', id: 'preview' %>
        <% end %>
      </div>
      <div class='form-actions'>
        <ul>
          <li>
            <%= form.submit '更新', class: 'btn btn-warning' %>
          </li>
          <li>
            <%= link_to 'キャンセル', :back, class: 'btn btn-secondary' %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
</div>
