<div class='container'>
  <%= form_with model: @post, url: gourmet_posts_path, local: true, class: 'mt-3'  do |form| %>
    <div class='mb-3'>
      <%= form.label :title, 'タイトル（仮）', class: 'd-block' %>
      <%= form.text_field :title, class: 'w-100 rounded' %>
    </div>
    <div class='mb-3'>
      <%= form.label :content, 'キャプション（仮）', class: 'd-block' %>
      <%= form.text_area :content, class: 'w-100 rounded' %>
    </div>
    <div class='mb-3'>
      <label class='border p-2 rounded', style='cursor: pointer;'>
        <%= image_tag 'parts/camera.svg' %>
        <span class="ml-5">画像を選択する</span>
        <%= form.file_field :picture, onchange: 'previewImage(event)', style: "display:none;" %>
      </label>
    </div>
    <div class='mb-3 border border-primary' style="width: 600px; height: 600px;">
      <% if @post.picture.attached? %>
        <%= image_tag @post.picture, id: 'preview' %>
      <% else %>
        <%= image_tag '/no_image.jpeg', id: 'preview', style: 'width: 100%; height: 100%; object-fit: contain;' %>
      <% end %>
    </div>
    <div class='mb-3'>
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
