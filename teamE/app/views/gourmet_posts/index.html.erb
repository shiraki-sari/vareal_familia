<h1 class='text-primary'>ブログ一覧</h1>
<div class="row"  style="margin-left: 0; margin-right: 0;">
  <% @posts.each do |post| %>
    <%# TODO: CSSファイルに書く %>
    <div class='col-md-4 p-1' style='margin-top: 10px; border: double thick; border-color: rgb(255, 102, 51 ,0.33);'>
      <%= image_tag post.picture, style: 'width:100%;height: 400px;' %>
      <br/>
      <h5 class='float-start' style='margin-right:10px;'><%= link_to post.title, gourmet_post_path(post) %></h5>
      <p>投稿日: <%= post.created_at.strftime("%Y/%m/%d") %></p>
    </div>
  <% end %>
</div>
