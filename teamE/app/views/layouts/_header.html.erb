<div class="sticky-top">
  <div id="carouselExampleCaptions" class="carousel slide border-primary border border-5" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= link_to 'https://twitter.com/VarealMan', target: :_blank do %>
          <%= image_tag "/vareal_man_header.jpeg", class: "d-block w-100", alt: "...", height: '200' %>
        <% end %>
      </div>
      <div class="carousel-item">
        <%= link_to 'https://www.vareal.co.jp/', target: :_blank do %>
          <%= image_tag "https://www.vareal.co.jp/wp-content/uploads/2020/02/topvisual1.jpg", class: "d-block w-100", alt: "...", height: '200' %>
          <div class="carousel-caption d-none d-md-block">
            <h2 class="title rich_font_type3" data-label="V i r t u a l × R E A L"><span>Virtual × REAL</span></h2>
          </div>
        <% end %>
      </div>
      <div class="carousel-item">
        <%= link_to 'https://www.vareal.vn/en/', target: :_blank do %>
          <%= image_tag "https://www.vareal.vn/wp-content/uploads/2021/06/working_environment.jpg", class: "d-block w-100", alt: "...", height: '200' %>
          <div class="carousel-caption d-none d-md-block">
            <h2 class="title rich_font_type3" data-label="Together at Vareal Vietnam "><span>Together at Vareal Vietnam</span></h2>
          </div>
        <% end %>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <div class='d-flex flex-row-reverse'>
    <% if request.path_info != "/gourmet_posts/new" %>
      <%= link_to new_gourmet_post_path, style: "text-decoration: none;margin-right: 10px;", "data-bs-toggle": "tooltip", "data-bs-placement": "top", "data-bs-original-title": "投稿する", class: 'write-icon-link' do %>
        <i class="far fa-edit fa-2x write-icon" style='color:#ff6633' alt="投稿"></i>
      <% end %>
    <% end %>
    <a class="nav-link dropdown-toggle humberger-menu" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
      <i class="fas fa-bars fa-3x", style='color:#ff6633'></i>
    </a>
    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
      <% if logged_in? %>
        <li>
          <%= link_to logout_path(current_user), method: :delete, class: 'dropdown-item' do %>
            ログアウト
          <% end %>
        </li>
        <li>
          <%= link_to "/gourmet_posts", class: 'dropdown-item' do %>
            マイページ
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to "/login", class: 'dropdown-item' do %>
            ログイン
          <% end %>
        </li>
        <li>
          <%= link_to "/signup", class: 'dropdown-item' do %>
            新規登録
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
