<div class="sticky-top">
  <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= link_to 'https://twitter.com/VarealMan', target: :_blank do %>
          <%= image_tag "/vareal_man_header.jpeg", class: "d-block w-100", alt: "...", height: '200' %>
        <% end %>
      </div>
      <div class="carousel-item">
        <%= link_to 'https://www.vareal.co.jp/', target: :_blank do %>
          <%= image_tag "https://www.vareal.co.jp/wp-content/uploads/2020/02/topvisual1.jpg", class: "d-block w-100", alt: "...", height: '200' %>
          <div class="carousel-caption d-none d-md-block">
            <h2 class="title rich_font_type3" data-label="V i r t u a l × R E A L"><span>Virtual × REAL</span></h2>
          </div>
        <% end %>
      </div>
      <div class="carousel-item">
        <%= link_to 'https://www.vareal.vn/en/', target: :_blank do %>
          <%= image_tag "https://www.vareal.vn/wp-content/uploads/2021/06/working_environment.jpg", class: "d-block w-100", alt: "...", height: '200' %>
          <div class="carousel-caption d-none d-md-block">
            <h2 class="title rich_font_type3" data-label="Together at Vareal Vietnam "><span>Together at Vareal Vietnam</span></h2>
          </div>
        <% end %>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <div style='text-align:right;'>
    <%= link_to new_gourmet_post_path, style: "text-decoration: none;margin-right: 20px;",  "data-bs-toggle": "tooltip", "data-bs-placement": "bottom", "data-bs-original-title": "投稿する" do %>
      <i class="far fa-edit fa-4x" style='color:#ff6633' alt="投稿"></i>
    <% end %>
    <%= link_to "/gourmet_posts", style: "text-decoration: none;margin-right: 20px;",  "data-bs-toggle": "tooltip", "data-bs-placement": "bottom", "data-bs-original-title": "マイページ" do %>
      <i class="far fa-user fa-4x" style='color:#ff6633'></i>
    <% end %>
  </div>
</div>
