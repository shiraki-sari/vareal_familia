<% return if request.path_info == "/login" || request.path_info == "/signup" %>
<section class="mt-3 sticky-bottom">
  <footer class="text-center text-white" style="background-color: #0a4275;">
    <div class="container p-1">
      <section class="mt-3">
        <% if logged_in? %>
          <p class="d-flex flex-row-reverse bd-highlight">
            <%= link_to logout_path(current_user), method: :delete do %>
              <button type="button" class="btn btn-outline-light btn-rounded me-5">
                ログアウト
              </button>
            <% end %>
          </p>
        <% else %>
          <p class="d-flex justify-content-center align-items-center">
            <%= link_to "ログイン", login_path, class: "btn btn-outline-success bg-white me-5" %>
            <%= link_to signup_path do %>
              <button type="button" class="btn btn-outline-light btn-rounded me-5">
                新規登録
              </button>
            <% end %>
          </p>
        <% end %>
      </section>
    </div>
  </footer>
</section>